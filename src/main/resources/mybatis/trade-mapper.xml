	<select id="selectList" parameterType="map" resultType="kh.spring.dto.GoodsTradeDTO">
		select * from (select row_number() over(order by no desc) as rown, used_transaction_board.* from used_transaction_board) where rown between #{start} and #{end}
	</select>
	
	<select id="selectListPrice" parameterType="map" resultType="kh.spring.dto.GoodsTradeDTO">
		select * from (select row_number() over(order by price #{order}) as rown, used_transaction_board.* from used_transaction_board) where rown between #{start} and #{end}
	</select>
	
	<select id="selectListLowPrice" parameterType="map" resultType="kh.spring.dto.GoodsTradeDTO">
		select * from (select row_number() over(order by price) as rown, used_transaction_board.* from used_transaction_board) where rown between #{start} and #{end}
	</select>
	
	<select id="selectListHighPrice" parameterType="map" resultType="kh.spring.dto.GoodsTradeDTO">
		select * from (select row_number() over(order by price desc) as rown, used_transaction_board.* from used_transaction_board) where rown between #{start} and #{end}
	</select>
	
	<select id="recordTotalCount" resultType="int">
		select count(*) from used_transaction_board
	</select>
	
	<delete id="delete">
		delete from used_transaction_board
	</delete>

